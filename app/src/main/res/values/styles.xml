<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/greyish_brown</item>

        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorError">@color/darkMaterialRed</item>
        <item name="fontFamily">@font/roboto_slab_regular</item>
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Regular</item>
        <item name="android:paddingStart">@dimen/button_padding_internal</item>
        <item name="android:paddingEnd">@dimen/button_padding_internal</item>
        <item name="android:drawablePadding">@dimen/button_padding_internal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Wide" parent="Button">
        <item name="cornerRadius">@dimen/button_wide_corner_radius</item>
        <item name="android:insetTop">@dimen/button_wide_inset</item>
        <item name="android:insetBottom">@dimen/button_wide_inset</item>
        <item name="android:paddingEnd">@dimen/button_wide_padding_internal_start_end</item>
        <item name="android:paddingStart">@dimen/button_wide_padding_internal_start_end</item>
    </style>

    <style name="custom_tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="Button.Colored" parent="Button.Wide">
        <item name="android:backgroundTint">@color/colorButton1</item>
    </style>

    <style name="Button.Colored.Icon" parent="Button.Wide">
        <item name="android:backgroundTint">@color/colorButton1</item>
        <item name="android:paddingStart">@dimen/button_wide_icon_padding_internal_start</item>
    </style>

    <style name="Button.Colored.2" parent="Button.Wide">
        <item name="android:backgroundTint">@color/colorButton2</item>
    </style>

    <style name="Button.Colored.3" parent="Button.Wide">
        <item name="android:backgroundTint">@color/colorButton3</item>
    </style>

    <style name="Button.Colored.3.Icon" parent="Button.Colored.3">
        <item name="android:backgroundTint">@color/colorButton3</item>
        <item name="android:paddingStart">@dimen/button_wide_icon_padding_internal_start</item>
    </style>

    <style name="Button.Colored.4" parent="Button.Wide">
        <item name="android:backgroundTint">@color/colorButton4</item>
    </style>

    <style name="Button.Colored.2.Dense" parent="Button">
        <item name="android:backgroundTint">@color/colorButton2</item>
    </style>

    <style name="Button.Colored.4.Dense" parent="Button">
        <item name="android:backgroundTint">@color/colorButton4</item>
    </style>

    <style name="Button.Icon" parent="Button.Text.Icon">
        <item name="android:paddingStart">@dimen/button_padding_internal_dense</item>
        <item name="android:paddingEnd">@dimen/button_padding_internal_dense</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Button.Text" parent="Button">
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="android:textColor">@color/textColorButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/button_padding_internal</item>
        <item name="android:paddingEnd">@dimen/button_padding_internal</item>
        <item name="android:drawablePadding">@dimen/button_padding_internal</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconTint">@color/colorIcon</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Button.Text.Inverse" parent="Button.Text">
        <item name="android:textColor">@color/textColorButtonInverse</item>
    </style>

    <style name="Button.Text.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="android:paddingStart">@null</item>
        <item name="android:paddingEnd">@null</item>
        <item name="iconTint">@color/colorIcon</item>
        <item name="iconPadding">@dimen/button_padding_internal</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/colorIcon</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Regular</item>
        <item name="rippleColor">@color/colorButtonIconRipple</item>
    </style>

    <style name="Text" />

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="fontFamily">@font/roboto_slab_regular</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="Text.Headline">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="Text.Headline.Normal">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="fontFamily">@font/roboto_slab_regular</item>
    </style>

    <style name="TextAppearance.Headline" parent="Text.Headline">
        <item name="android:textColor">@color/textColorHeadline</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_headline</item>
    </style>

    <style name="TextAppearance.Headline.Normal" parent="Text.Headline.Normal">
        <item name="android:textColor">@color/textColorHeadline</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_headline</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="Text.Headline">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_subtitle</item>
    </style>

    <style name="TextAppearance.Body" parent="Text.Regular">
        <item name="android:letterSpacing">@fraction/letter_spacing_body</item>
    </style>

    <style name="TextAppearance.Body.Bold" parent="Text.Bold" />

    <style name="TextAppearance.Body.1" parent="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_body_1</item>
        <item name="android:textColor">@color/textColorBody1</item>
    </style>

    <style name="TextAppearance.Body.2" parent="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_body_2</item>
        <item name="android:textColor">@color/textColorBody2</item>
    </style>

    <style name="TextAppearance.Body.3" parent="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_body_2</item>
        <item name="android:textColor">@color/textColorBody3</item>
    </style>

    <style name="TextAppearance.Body.2.Bold" parent="TextAppearance.Body.Bold">
        <item name="android:textSize">@dimen/text_size_body_2</item>
        <item name="android:textColor">@color/textColorBody2</item>
    </style>

    <style name="TextAppearance.Body.2.Inverse" parent="TextAppearance.Body.2">
        <item name="android:textColor">@color/textColorBody2Inverse</item>
    </style>

    <style name="TextAppearance.Label" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/textColorLabel</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_label</item>
    </style>

    <style name="TextAppearance.Label.Colored.Grey" parent="TextAppearance.Label">
        <item name="android:textColor">@color/textColorLabel2</item>
    </style>

    <style name="TextAppearance.Label.Inverse" parent="TextAppearance.Label">
        <item name="android:textColor">@color/textColorLabelInverse</item>
    </style>

    <style name="TextAppearance.Caption" parent="Text">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/textColorCaption</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_caption</item>
    </style>

    <style name="TextAppearance.Footnote" parent="Text">
        <item name="android:textSize">@dimen/text_size_footnote</item>
        <item name="android:textColor">@color/textColorFootnote</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_footnote</item>
    </style>

    <!-- Default overline style -->
    <style name="TextAppearance.Overline" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_overline</item>
        <item name="android:textColor">@color/textColorOverline</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_overline</item>
    </style>

    <style name="TextAppearance.Overline.2" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_size_overline_2</item>
        <item name="android:textColor">@color/textColorOverline</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_overline_2</item>
    </style>

    <!-- TextAppearance.Overline.3 -->
    <style name="TextAppearance.Overline.3" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_size_overline_2</item>
        <!-- Text color remains unchanged for light and dark themes -->
        <item name="android:textColor">@color/textColorOverline3</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_overline_3</item>
    </style>

    <!-- TextAppearance.Overline.4 -->
    <style name="TextAppearance.Overline.4" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_overline</item>
        <item name="android:textColor">@color/textColorOverline</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_overline_3</item>
    </style>

    <style name="TextAppearance.Button" parent="Text.Bold">
        <item name="android:textColor">@color/textColorButton</item>
    </style>

    <style name="TextAppearance.Overline.Raised" parent="TextAppearance.Overline.4">
        <item name="android:paddingStart">@dimen/overline_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/overline_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/overline_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/overline_padding_vertical</item>
        <item name="android:elevation">@dimen/overline_elevation</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Overline.Raised.Colored" parent="TextAppearance.Overline.Raised">
        <item name="android:background">@drawable/bg_overline_raised</item>
        <item name="android:textColor">@color/textColorOverlineInverse2</item>
    </style>

    <style name="TextAppearance.Overline.Raised.Colored.White" parent="TextAppearance.Overline.Raised">
        <item name="android:background">@drawable/bg_caption_white</item>
        <item name="android:textColor">@color/textColorOverlineInverse</item>
    </style>

    <style name="TextAppearance.Button.Regular" parent="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_button</item>
    </style>

    <style name="TextAppearance.Button.Small" parent="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_size_button_small</item>
        <item name="android:letterSpacing">@fraction/letter_spacing_button_small</item>
    </style>

    <style name="TextAppearance.Button.Small.Inverse" parent="TextAppearance.Button.Small">
        <item name="android:textColor">@color/textColorButtonOnError</item>
    </style>

    <style name="TextAppearance.Headline.1" parent="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="TextAppearance.Headline.1_1" parent="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_h1_1</item>
    </style>

    <style name="TextAppearance.Headline.2" parent="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="TextAppearance.Headline.2.Inverse" parent="TextAppearance.Headline.2">
        <item name="android:textColor">@color/textColorHeadlineInverse</item>
    </style>

    <style name="TextAppearance.Body.1.Inverse" parent="TextAppearance.Body.1">
        <item name="android:textColor">@color/textColorBody1Inverse</item>
    </style>

    <style name="TextAppearance.Headline.3" parent="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="TextAppearance.Headline.4" parent="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <style name="TextAppearance.Headline.4.Inverse" parent="TextAppearance.Headline.4">
        <item name="android:textColor">@color/textColorBody1Inverse</item>
    </style>

    <style name="TextAppearance.Headline.5" parent="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_h5</item>
    </style>

    <style name="TextAppearance.Headline.5.Normal" parent="TextAppearance.Headline.Normal">
        <item name="android:textSize">@dimen/text_size_h5</item>
    </style>

</resources>
